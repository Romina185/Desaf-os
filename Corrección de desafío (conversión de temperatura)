        "# Desafío 3\n",
        "#Convertir una temperatura dada en Celsius a Fahrenheit y Kelvin utilizando operaciones directas sobre variables.\n",
        "\n",
        "#Temperatura en Celsius.\n",
        "#\"Ingresar la temperatura en Celsius\"\n",
        "Celsius = float(\"25.8\")\n",
        "# Conversión a Fahrenheit\n",
        "#Aplicar fórmula de conversión\n",
        "Fahrenheit = (Celsius * 1.8) + 32\n",
        "#Conversión a Kelvin\n",
        "kelvin = Celsius + 273.15\n",
        "#Operaciones aplicadas: multiplicación y suma.\n",
        "# Mostrar los resultados\n",
        "print(f\"Temperatura en Celsius: {Celsius} °C\")\n",
        "print(f\"Temperatura en Fahrenheit: {Fahrenheit} °F\")\n",
        "print(f\"Temperatura en Kelvin: {kelvin} °F\")\n",
        "\n"
